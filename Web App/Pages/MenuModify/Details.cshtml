@page
@model Web_App.Pages.Menu.DetailsModel

<!DOCTYPE html>
<html lang="en">

<head>
    @{
        ViewData["Title"] = "Details";
    }
</head>

<body>

    <div class="content-spacing">

        <h1>Menu Item Details</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Food Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.FoodName)
                </dd>
                <dt class="col-sm-2">
                    Food Description
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.FoodDescription)
                </dd>
                <dt class="col-sm-2">
                    Category of Food
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.CategoryOfFood)
                </dd>
                <dt class="col-sm-2">
                    Specificaton
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.Specification)
                </dd>
                <dt class="col-sm-2">
                    Available?
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.IsAvailable)
                </dd>
                <dt class="col-sm-2">
                    Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.Price)
                </dd>
                <dt class="col-sm-2">
                    Image File Path
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodItem.ImageDescription)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.FoodItem?.FoodID">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    
    </div>

</body>

</html>